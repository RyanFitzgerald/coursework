mixin pagination(page, numPages, count)
    .pagination
        .pagination__prev
            if page > 1
                a(href=`/stores/page/${page - 1}`) Prev
        .pagination__text
            p Page #{page} of #{numPages} | #{count} total results
        .pagination__next
            if page < numPages
                a(href=`/stores/page/${parseFloat(page) + 1}`) Next